<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paper_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_paper_bg">

<!--  main_paper_calender_ver_gap -->

    <RelativeLayout
        android:id="@+id/paper_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_paper_title_layout_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/main_paper_calender_ver_gap" >

        <TextView
            android:id="@+id/paper_item_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="原创"
            android:textColor="@color/paper_title_txt"
            android:textSize="@dimen/font_text_size_28" />

        <ImageView
            android:layout_width="@dimen/main_paper_title_point_length"
            android:layout_height="@dimen/main_paper_title_point_length"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/custom_page_hor_padding"
            android:layout_toLeftOf="@+id/paper_item_title_txt"
            android:src="@drawable/paper_title_point" />

        <ImageView
            android:layout_width="@dimen/main_paper_title_point_length"
            android:layout_height="@dimen/main_paper_title_point_length"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/custom_page_hor_padding"
            android:layout_toRightOf="@+id/paper_item_title_txt"
            android:src="@drawable/paper_title_point" />
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/paper_item_paper_img"
        android:layout_width="@dimen/main_paper_paper_width"
        android:layout_height="@dimen/main_paper_paper_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/main_paper_bottom_gap"
        android:background="@color/color_purple_bd6aff"
        android:scaleType="fitXY"
        />

</RelativeLayout>