<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_red" >

    <!--
         <include
        android:id="@+id/main_title"
        layout="@layout/title_layout" />
    -->

    <RelativeLayout
        android:id="@+id/engineer_title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/engineer_back_btn"
            android:layout_width="@dimen/self_center_back_btn_width"
            android:layout_height="@dimen/self_center_back_btn_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/self_center_hor_padding"
            android:layout_marginTop="@dimen/self_center_top_padding"
            android:background="@drawable/self_setting_back_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/engineer_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engineer_title_layout"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="SELF RESUME"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Android Development Engineer"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/engineer_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engineer_top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/engineer_name_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/engineer_shape"
                 >

                <TextView
                    android:id="@+id/engineer_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Open It"
                    android:textColor="@color/custom_grey"
                    android:textSize="@dimen/font_text_size_30" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/engineer_head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/engineer_head_circle_shape"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/engineer_head_pic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:background="@drawable/engineer_head" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/engineer_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engineer_head_layout"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_center_item_height"
            android:background="@drawable/engineer_shape" >

            <!--
                 <ImageView
                android:id="@+id/self_center_offline_tag"
                android:layout_width="@dimen/self_center_item_tag_width"
                android:layout_height="@dimen/self_center_item_tag_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_hor_padding"
                android:background="@drawable/self_center_sign_center" />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_item_hor_gap"
                android:text="Name: Richer.He.Fengfei"
                android:textColor="@color/custom_grey"
                android:textSize="@dimen/font_text_size_30" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/self_center_item_hor_gap"
            android:layout_height="@dimen/custom_divline_width"
            android:background="#7fffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_center_item_height"
            android:background="@drawable/engineer_shape" >

            <!--
                 <ImageView
                android:id="@+id/self_center_offline_tag"
                android:layout_width="@dimen/self_center_item_tag_width"
                android:layout_height="@dimen/self_center_item_tag_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_hor_padding"
                android:background="@drawable/self_center_sign_center" />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_item_hor_gap"
                android:text="Graduate  : Hust in 2014/06"
                android:textColor="@color/custom_grey"
                android:textSize="@dimen/font_text_size_30" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/self_center_item_hor_gap"
            android:layout_height="@dimen/custom_divline_width"
            android:background="#7fffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/self_center_item_height"
            android:background="@drawable/engineer_shape" >

            <!--
                 <ImageView
                android:id="@+id/self_center_offline_tag"
                android:layout_width="@dimen/self_center_item_tag_width"
                android:layout_height="@dimen/self_center_item_tag_width"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_hor_padding"
                android:background="@drawable/self_center_sign_center" />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/self_center_item_hor_gap"
                android:text="Company : National Business Daily"
                android:textColor="@color/custom_grey"
                android:textSize="@dimen/font_text_size_30" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>