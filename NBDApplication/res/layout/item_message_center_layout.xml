<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/newsSelfItemBg"
    android:orientation="vertical" >

    <!-- android:background="?attr/newsPageBgColor" -->

    <RelativeLayout
        android:id="@+id/message_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_message_item_top_height"
        android:paddingLeft="@dimen/self_message_item_hor_gap"
        android:paddingRight="@dimen/self_message_item_hor_gap" >

        <TextView
            android:id="@+id/message_item_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="系统管理员"
            android:textColor="?attr/newsTextBlack"
            android:textSize="@dimen/font_text_size_30" />

        <TextView
            android:id="@+id/message_item_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" 
            android:textSize="@dimen/font_text_size_24"
            android:textColor="@color/video_share_txt"
            android:text="2016-06-01"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_item_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/self_message_item_top_gap"
        android:paddingLeft="@dimen/self_message_item_hor_gap"
        android:paddingRight="@dimen/self_message_item_hor_gap" >

        <TextView
            android:id="@+id/message_item_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:text="你的账号在异地登录，存在风险，希望尽快修改密码，保证账号安全。"
            android:textColor="@color/video_share_txt"
            android:textSize="@dimen/font_text_size_24" />

        <TextView
            android:id="@+id/message_item_content_txt_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:text="你的账号在异地登录，存在风险，希望尽快修改密码，保证账号安全。"
            android:textColor="@color/video_share_txt"
            android:textSize="@dimen/font_text_size_24" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_divline_width"
        android:layout_marginTop="@dimen/self_message_item_botom_gap"
        android:background="@color/custom_divline" />

</LinearLayout>