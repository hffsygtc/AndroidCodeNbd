<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gs_layout_list_section"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toggle_section_height"
    android:background="@color/toggle_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/left_section_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/left_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="正价值"
            android:textColor="@color/bottom_tab_click_txt"
            android:textSize="@dimen/font_text_size_30" />

        <TextView
            android:id="@+id/left_section_choose"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/bottom_tab_click_txt" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/toggle_section_div_width"
        android:layout_height="@dimen/toggle_section_div_height"
        android:background="@drawable/toggle_section_mid" />

    <RelativeLayout
        android:id="@+id/right_section_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/right_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="正价值"
            android:textColor="@color/bottom_tab_click_txt"
            android:textSize="@dimen/font_text_size_30" />

        <TextView
            android:id="@+id/right_section_choose"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/bottom_tab_click_txt" />
    </RelativeLayout>

</LinearLayout>