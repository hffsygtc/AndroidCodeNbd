<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paper_item_layout"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/paper_content_layout"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@color/color_black_d9d9d9" >

        <TextView
            android:id="@+id/paper_title_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/news_hor_gap"
            android:text="首页"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/font_text_size_24" />

        <ImageView 
            android:id="@+id/paper_img"
            android:layout_width="match_parent" 
            android:layout_height="200dp"
            android:layout_below="@+id/paper_title_txt"/>
    </RelativeLayout>

</RelativeLayout>