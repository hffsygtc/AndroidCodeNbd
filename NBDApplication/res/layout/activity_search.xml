<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/newsSelfPageBg" >

    <RelativeLayout
        android:id="@+id/search_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_setting_title_height"
        android:background="@drawable/self_setting_title_bg" >

        <ImageView
            android:id="@+id/search_back_btn"
            android:layout_width="@dimen/self_center_back_btn_width"
            android:layout_height="@dimen/self_center_back_btn_width"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/self_center_hor_padding"
            android:layout_marginTop="@dimen/self_center_top_padding"
            android:background="@drawable/self_setting_back_btn" />

        <TextView
            android:id="@+id/search_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/self_center_hor_padding"
            android:layout_toRightOf="@+id/search_back_btn"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/font_text_size_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_keyword_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/self_center_item_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/self_setting_top_margin"
        android:background="?attr/newsSelfItemBg" >

        <EditText
            android:id="@+id/search_keyword_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/self_center_hor_padding"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入关键字......"
            android:textColor="?attr/newsTextBlack"
            android:textColorHint="@color/activity_main_self_setting_hint_text"
            android:textSize="@dimen/font_text_size_30" />

        <RelativeLayout
            android:id="@+id/search_icon_layout"
            android:layout_width="@dimen/search_activity_search_layout_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" 
            android:layout_marginRight="@dimen/self_center_hor_padding">

            <ImageView
                android:layout_width="@dimen/search_activity_search_icon_width"
                android:layout_height="@dimen/search_activity_search_icon_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/search_activity_search" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/search_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_keyword_layout"
        android:layout_marginLeft="@dimen/news_title_left_gap"
        android:layout_marginTop="@dimen/search_activity_ver_padding"
        android:text="搜索历史"
        android:textColor="@color/main_paper_canlender_data"
        android:textSize="@dimen/font_text_size_30" />

    <LinearLayout
        android:id="@+id/search_history_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_history_title"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_page_ver_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_activity_circle_height"
            android:paddingLeft="@dimen/news_title_left_gap"
            android:paddingRight="@dimen/news_title_left_gap" >

            <TextView
                android:id="@+id/search_histore_text_1"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="历史"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />

            <TextView
                android:id="@+id/search_histore_text_2"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="历史"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/search_history_gap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_page_ver_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_activity_circle_height"
            android:paddingLeft="@dimen/news_title_left_gap"
            android:paddingRight="@dimen/news_title_left_gap" >

            <TextView
                android:id="@+id/search_histore_text_3"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="历史"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />

            <TextView
                android:id="@+id/search_histore_text_4"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="历史"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/search_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_history_content_layout"
        android:layout_marginLeft="@dimen/news_title_left_gap"
        android:layout_marginTop="@dimen/search_activity_ver_padding"
        android:text="热门搜索"
        android:textColor="@color/main_paper_canlender_data"
        android:textSize="@dimen/font_text_size_30" />

    <LinearLayout
        android:id="@+id/search_hot_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_hot_title"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_page_ver_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_activity_circle_height"
            android:paddingLeft="@dimen/news_title_left_gap"
            android:paddingRight="@dimen/news_title_left_gap" >

            <TextView
                android:id="@+id/search_hot_text1"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />

            <TextView
                android:id="@+id/search_hot_text2"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_page_ver_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_activity_circle_height"
            android:paddingLeft="@dimen/news_title_left_gap"
            android:paddingRight="@dimen/news_title_left_gap" >

            <TextView
                android:id="@+id/search_hot_text3"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />

            <TextView
                android:id="@+id/search_hot_text4"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_page_ver_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_activity_circle_height"
            android:paddingLeft="@dimen/news_title_left_gap"
            android:paddingRight="@dimen/news_title_left_gap" >

            <TextView
                android:id="@+id/search_hot_text5"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />

            <TextView
                android:id="@+id/search_hot_text6"
                android:layout_width="@dimen/search_activity_circle_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_activity_hot_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/custom_page_hor_padding"
                android:paddingRight="@dimen/custom_page_hor_padding"
                android:singleLine="true"
                android:text="热门"
                android:textColor="@color/search_activity_content"
                android:textSize="@dimen/font_text_size_24" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/search_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/newsCover" />

</RelativeLayout>