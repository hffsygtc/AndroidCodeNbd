<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充的颜色 -->
    <solid android:color="#d53e36" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners
        android:bottomLeftRadius="@dimen/news_viewpager_point_radius"
        android:bottomRightRadius="@dimen/news_viewpager_point_radius"
        android:topLeftRadius="@dimen/news_viewpager_point_radius"
        android:topRightRadius="@dimen/news_viewpager_point_radius" />

    <gradient
        android:angle="90"
        android:centerColor="#d53e36"
        android:endColor="#d53e36"
        android:startColor="#d53e36" />

</shape>